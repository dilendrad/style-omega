<?xml version="1.0" encoding="utf-8"?>
<com.rey.material.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInquiry">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add An Inquiry"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"/>


    <EditText
        android:id="@+id/email_inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter Your Email"/>

    <EditText
        android:id="@+id/subject_inquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_inquiry"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Subject"/>

    <EditText
        android:id="@+id/message_body_inquiry"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/subject_inquiry"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:hint="Message"
        android:singleLine="false"
        android:textAlignment="textStart" />

    <Button
        android:id="@+id/add_inquiry_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Add Inquiry"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorPrimaryDark"
        android:textStyle="bold"/>

</com.rey.material.widget.RelativeLayout>